<h1><%= @track.title %></h1>

<body>
<%= link_to "Edit Track", edit_track_url(@track.id) %>

<form action=<%= track_url(@track) %> method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" value="Delete Track">
</form>

<%= link_to "Return to Album", album_url(@track.album_id) %>

<h4>Lyrics:</h4>
<%= ugly_lyrics(@track.lyrics) %>

<h4>Notes:</h4>
<% @track.notes.each do |note| %>
    <%= render "notes/note", note: note %>
<% end %>

<%= render "notes/form", track: @track %>
</body>