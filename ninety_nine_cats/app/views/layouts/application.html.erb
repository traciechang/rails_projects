<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <header>Welcome <%= current_user.user_name if current_user %></header>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>

  <% if current_user %>
    <%= button_to "Logout", session_url(current_user.session_token), method: :delete %>
  <% else %>
    <%= button_to "Login", new_session_url %>
  <% end %>
</html>
